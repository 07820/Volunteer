<UserControl x:Class="Form.Control.ThreeCircle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Form.Control"
             mc:Ignorable="d">
    <Grid Background="Transparent" Cursor="Hand" Height="20" Width="30" HorizontalAlignment="Center" MouseDown="Grid_MouseDown">
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Ellipse Fill="{DynamicResource IconBrush}" x:Name="c1" Width="4" Height="4" ></Ellipse>
            <Ellipse Fill="{DynamicResource IconBrush}" x:Name="c2" Width="4" Height="4" Margin="3,0,3,0" ></Ellipse>
            <Ellipse Fill="{DynamicResource IconBrush}" x:Name="c3" Width="4" Height="4" ></Ellipse>
        </StackPanel>
    </Grid>
</UserControl>
